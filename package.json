{
  "name": "advent-of-code",
  "scripts": {
    "fix": "prettier --cache --write '*.md' 'src/**/*.ts'",
    "start": "tsx",
    "test": "wireit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/advent-of-code.git"
  },
  "homepage": "https://github.com/pspeter3/advent-of-code#readme",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.8.9",
    "prettier": "^3.0.3",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "wireit": "^0.14.1"
  },
  "prettier": {
    "tabWidth": 4
  },
  "wireit": {
    "test": {
      "dependencies": [
        "test:format",
        "test:spec",
        "test:types"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check '*.md' 'src/**/*.ts'",
      "files": [
        "src/**/*.ts",
        "*.md"
      ],
      "output": []
    },
    "test:spec": {
      "command": "tsx --test src/common/*.spec.ts",
      "files": [
        "src/common/**/*.ts"
      ],
      "output": []
    },
    "test:types": {
      "command": "tsc",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "tsconfig.tsbuildinfo"
      ]
    }
  }
}
