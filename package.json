{
  "name": "advent-of-code",
  "homepage": "https://github.com/pspeter3/advent-of-code#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/advent-of-code.git"
  },
  "type": "module",
  "scripts": {
    "fix": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "heap-js": "^2.7.1",
    "yalps": "^0.6.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.3",
    "wireit": "^0.14.12"
  },
  "wireit": {
    "fix": {
      "dependencies": [
        "fix:format",
        "fix:lint"
      ]
    },
    "fix:format": {
      "command": "oxfmt --write"
    },
    "fix:lint": {
      "command": "oxlint --fix"
    },
    "test": {
      "dependencies": [
        "test:format",
        "test:lint",
        "test:spec",
        "test:types"
      ]
    },
    "test:format": {
      "command": "oxfmt --check",
      "files": [
        ".github/**/*.yml",
        ".vscode/**/*.json",
        "*.md",
        "package.json",
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    },
    "test:lint": {
      "command": "oxlint",
      "files": [
        "src/**/*.ts"
      ],
      "output": []
    },
    "test:spec": {
      "command": "node --test",
      "files": [
        "src/common/**/*.ts"
      ],
      "output": []
    },
    "test:types": {
      "command": "tsc",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "tsconfig.tsbuildinfo"
      ]
    }
  }
}
